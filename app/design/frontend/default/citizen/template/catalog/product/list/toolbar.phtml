<?php if($this->getCollection()->getSize()): ?>
<ul class="main-filter row">
    <?php if( $this->isExpanded() ): ?>
    <li class="left">    
        <ul id"productDataNavLeftTOP">
            <li class="label col" style="text-transform:uppercase;">
				<label><?php echo $this->__('Sort Products:') ?></label>
