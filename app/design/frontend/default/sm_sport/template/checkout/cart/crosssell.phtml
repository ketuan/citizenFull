<?php
/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php 
global $var_yttheme;
global $config_theme;

$keepFrame = ($config_theme['white_border_image'])?true:false;

$crosssell_image_type = $config_theme['checkout_cart_crosssell_image_type'];
$crosssell_image_width = $config_theme['checkout_cart_crosssell_image_width'];
$crosssell_image_height = $config_theme['checkout_cart_crosssell_image_height'];

$ws_bgcolor =  Mage::helper('sport/data')->hex2rgb($config_theme['white_border_image_background_color']);

?>
<?php if($this->getItemCount()): ?>
<div class="crosssell">
    <h2><?php echo $this->__('Based on your selection, you may be interested in the following items:') ?></h2>
    <ul id="crosssell-products-list">
    <?php foreach ($this->getItems() as $_product): ?>
        <li class="item">
			<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, $crosssell_image_type), null, true) ?>" class="product-image">
				<img src="<?php echo $this->helper('catalog/image')->init($_product, $crosssell_image_type)->keepAspectRatio($keepFrame)->backgroundColor($ws_bgcolor)->resize($crosssell_image_width, $crosssell_image_height); ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_product, $crosssell_image_type), null, true) ?>" />
			</a>            
            <div class="product-details">
                <h3 class="product-name"><a title="<?php echo $this->htmlEscape($_product->getName()) ?>" href="<?php echo $_product->getProductUrl() ?>">
				<?php
				if(strlen($this->htmlEscape($_product->getName())) >= 22){
					echo substr($this->htmlEscape($_product->getName()), 0, 22).'...';
				}else{
					echo $this->htmlEscape($_product->getName());
				}
				?>    
                </a></h3>
                <?php echo $this->getPriceHtml($_product, true) ?>
                <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                <div class="product-add-box">
	                <ul class="add-to-links">
	                    <?php if ($this->helper('wishlist')->isAllow()) : ?>
	                        <li><a href="<?php echo $this->getAddToWishlistUrl($_product) ?>" class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a></li>
	                    <?php endif; ?>
	                    <?php if($_compareUrl=$this->getAddToCompareUrl($_product)): ?>
	                        <li><a href="<?php echo $_compareUrl ?>" class="link-compare"><?php echo $this->__('Add to Compare') ?></a></li>
	                    <?php endif; ?>
	                </ul>
	            </div>
            </div>
        </li>
    <?php endforeach; ?>
    </ul>
    <script type="text/javascript">decorateList('crosssell-products-list', 'none-recursive')</script>
</div>
<?php endif; ?>
