				<checkout_cart_crosssell_image_height>100</checkout_cart_crosssell_image_height>
				
				<checkout_cart_item_default_image_type>thumbnail</checkout_cart_item_default_image_type>
				<checkout_cart_item_default_image_width>150</checkout_cart_item_default_image_width>
				<checkout_cart_item_default_image_height>100</checkout_cart_item_default_image_height>
			</catalog_images>
		</sport_cfg>
	</default> 
</config> 