				<catalog_product_list_related_image_width>100</catalog_product_list_related_image_width>
				<catalog_product_list_related_image_height>100</catalog_product_list_related_image_height>
				
				<catalog_product_list_upsell_image_type>small_image</catalog_product_list_upsell_image_type>
				<catalog_product_list_upsell_image_width>150</catalog_product_list_upsell_image_width>
				<catalog_product_list_upsell_image_height>100</catalog_product_list_upsell_image_height>
				
				<checkout_cart_crosssell_image_type>thumbnail</checkout_cart_crosssell_image_type>
