<?xml version="1.0"?>
<config>
	<modules>
        <Sm_Slider>
            <version>1.0</version>
        </Sm_Slider>
    </modules>
	<global>
		<models>
            <slider>
                <class>Sm_Slider_Model</class>
            </slider>
        </models>
		<blocks>
            <slider>
                <class>Sm_Slider_Block</class>
            </slider>            		
        </blocks>				
		<helpers>
            <slider>
                <class>Sm_Slider_Helper</class>
            </slider>
        </helpers>
        <resources>
        	<slider_setup>
        		<setup>
        			<module>Sm_Slider</module>
        		</setup>
        	</slider_setup>
        </resources>
	</global>
	<frontend>
        <routers>
			<slider>
                <use>standard</use>
                <args>
                    <module>Sm_Slider</module>
                    <frontName>slider</frontName>
                </args>
            </slider>
        </routers>
		<layout>
            <updates>
                <slider module="Sm_Slider">
					<file>sm/slider.xml</file>
                </slider>
            </updates>
        </layout>
        <translate>
      		<modules>
          		<Sm_Slider>
                     <files>
                          <default>Sm_Slider.csv</default>
                     </files>
                </Sm_Slider>
            </modules>
        </translate>
	</frontend>
	<adminhtml>
        <translate>
      		<modules>
          		<Sm_Slider>
                     <files>
                          <default>Sm_Slider.csv</default>
                     </files>
                </Sm_Slider>
            </modules>
        </translate>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>										
										<slider_cfg translate="title" module="slider">
											<title>SM Slider Settings</title>
										</slider_cfg>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<default>
        <slider_cfg>
        	<general>
                <isenabled>1</isenabled>
                <title>SM Slider</title>
            </general>
			<module_setting>
				<module_width></module_width>
				<theme>theme1</theme>
				<autoplay>1</autoplay>
				<duration>2000</duration>
				<control>1</control>
				<interval>500</interval>
				<show_title_slider>1</show_title_slider>
				<title_slider>SM Slider</title_slider>	
				<item_per_page>3</item_per_page>
				<item_per_scroll>1</item_per_scroll>	
				<start_item>1</start_item>				
			</module_setting>			
            <product_selection>
            	<product_source>catalog</product_source>
            	<product_category></product_category>
            	<product_ids></product_ids>
            	<product_order_by></product_order_by>
            	<product_order_dir></product_order_dir>
            	<product_limitation>10</product_limitation>
			</product_selection>
			<product_display_setting>
				<product_image_disp>1</product_image_disp>
				<product_image_linkable>1</product_image_linkable>
				<product_image_width>200</product_image_width>
				<product_image_height>150</product_image_height>			
				<product_title_disp>1</product_title_disp>
				<product_title_linkable>1</product_title_linkable>
				<product_title_color>#000000</product_title_color>
				<product_title_max_characters>50</product_title_max_characters>
	
				<product_description_disp>1</product_description_disp>
				<product_description_color>#000000</product_description_color>
				<product_description_max_characters>150</product_description_max_characters>
				<product_details_page_link_disp>1</product_details_page_link_disp>
				<product_details_page_link_text>See details</product_details_page_link_text>
				
				<product_links_target>_self</product_links_target>
				
				<product_price_disp>1</product_price_disp>
				<!--<product_reviews_count>1</product_reviews_count>
				<product_views_count>1</product_views_count>
				<product_sales_count>1</product_sales_count>
				<product_stock_status>1</product_stock_status>
				
				<tooltip_disp>1</tooltip_disp>
				<tooltip_width>360</tooltip_width>
				<tooltip_image_maxwidth>120</tooltip_image_maxwidth>
				<tooltip_description_max_characters></tooltip_description_max_characters>-->
			</product_display_setting>
            <advanced>
            	<include_jquery>1</include_jquery>
            	<pretext></pretext>
            	<posttext></posttext>
            </advanced>
        </slider_cfg>
    </default>
</config>